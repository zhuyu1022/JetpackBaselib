<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_dialog_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="服务时间:工作日8:30～17:30"
        android:textColor="#66303133"
        android:textSize="13sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"
        app:layout_constraintBottom_toBottomOf="@+id/titleTv" />

    <TextView
        android:id="@+id/callTv"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="拨打电话"
        android:textColor="#ff303133"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv" />

    <View
        android:id="@+id/view16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"
        app:layout_constraintBottom_toBottomOf="@+id/callTv" />

    <TextView
        android:id="@+id/copyTv"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="复制号码，添加客服微信"
        android:textColor="#ff303133"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view16" />







    <View
        android:id="@+id/view18"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/lineColor"
        app:layout_constraintTop_toBottomOf="@+id/copyTv" />


    <TextView
        android:id="@+id/cancelTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="取消"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view18" />


</androidx.constraintlayout.widget.ConstraintLayout>